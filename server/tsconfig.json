{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitReturns": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/__tests__/*.ts"
  ],
  "compileOnSave": true
}
